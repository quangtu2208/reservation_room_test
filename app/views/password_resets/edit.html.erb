<section class="sample-text-area">
  <div class="container">
    <div class="row fullscreen align-items-center justify-content-center">
      <div class="col-md-6 banner-right card shadow-lg">
        <%= form_for @user, url: password_reset_path(params[:id]), html: {class: "form-wrap"}  do |f| %>
          <%= render "shared/error_messages", object: f.object  %>
          <%= hidden_field_tag :email, @user.email %>
          <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Enter password" %>
          <%= f.button "Confirm", class: "primary-btn text-uppercase" %>
        <% end %>
      </div>
    </div>
  </div>
</section>
