<section class="sample-text-area">
  <div class="container">
    <div class="row fullscreen align-items-center justify-content-center">
      <div class="col-md-6 banner-right card shadow-lg">
        <%= form_for @account, url: registration_path, html: {class: "form-wrap"}  do |f| %>
          <%= render "shared/error_messages", object: f.object  %>
          <%= f.text_field :name, class: "form-control", placeholder: "Enter name" %>
          <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
          <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Enter password" %>
          <%= f.button "Register", class: "primary-btn text-uppercase" %>
        <% end %>
      </div>
    </div>
  </div>
</section>
